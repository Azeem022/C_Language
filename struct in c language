# TO PRINT THE STUDENT NAME,ROLLNO & CGPA
   #include<stdio.h>
#include<string.h>
   //User define(DECLARATION OF STUDENT DETAIL )
    struct student
	{
		int rollNo;
		float cgpa;
		char name[100]; 
	};   
int main()
{
    struct student s1;    // MAKE A VARIABLE 
    s1.rollNo = 672087;
    s1.cgpa = 8.9;
    strcpy(s1.name,"Mohd Azeem");
    printf("student name %s\n",s1.name);
    printf("student ROllNo %d\n",s1.rollNo);
    printf("student cgpa %f\n",s1.cgpa);
	return 0;
}
OUTPUT   
student name Mohd Azeem
student ROllNo 672087
student cgpa 8.900000
